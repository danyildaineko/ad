    }

    .ai-projects-cta-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-projects-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-projects-container-{{ ai_gen_id }}">
    <div class="ai-projects-intro-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-projects-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      
      {% if block.settings.description != blank %}
        <div class="ai-projects-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>

    <div class="ai-projects-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign project_enabled_key = 'project_' | append: i | append: '_enabled'
          assign project_image_key = 'project_' | append: i | append: '_image'
          assign project_name_key = 'project_' | append: i | append: '_name'
          assign project_location_key = 'project_' | append: i | append: '_location'

          assign project_enabled = block.settings[project_enabled_key]
          assign project_image = block.settings[project_image_key]
          assign project_name = block.settings[project_name_key]
          assign project_location = block.settings[project_location_key]
        %}

        {% if project_enabled %}
          <div class="ai-project-card-{{ ai_gen_id }}">
            <div class="ai-project-image-wrapper-{{ ai_gen_id }}">
              {% if project_image %}
                <img
                  src="{{ project_image | image_url: width: 800 }}"
                  alt="{{ project_image.alt | escape }}"
                  class="ai-project-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ project_image.width }}"
                  height="{{ project_image.height }}"
                >
              {% else %}
                <div class="ai-project-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
              <div class="ai-project-overlay-{{ ai_gen_id }}"></div>
            </div>
            
            <div class="ai-project-content-{{ ai_gen_id }}">
              {% if project_name != blank %}
                <h3 class="ai-project-name-{{ ai_gen_id }}">{{ project_name }}</h3>
              {% endif %}
              
              {% if project_location != blank %}
                <p class="ai-project-location-{{ ai_gen_id }}">{{ project_location }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_cta and block.settings.cta_text != blank %}
      <div class="ai-projects-cta-{{ ai_gen_id }}">
        <a 
          href="{{ block.settings.cta_link }}" 
          class="ai-projects-cta-button-{{ ai_gen_id }}"
        >
          {{ block.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

