:root {
  --disclaimer-border-color: #2C4A52;
  --disclaimer-bg-color: #f8f9fa;
  --disclaimer-bg-hover: #f0f1f3;
  --disclaimer-text-color: #2C4A52;
}
/* ========================================================================== */

.product-info-disclaimer {
  margin: 20px 0 0 0;
  width: 100%;
  box-sizing: border-box;
}

.product-info-disclaimer__content {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  padding: 10px 14px;
  background-color: var(--disclaimer-bg-color);
  border-left: 2px solid var(--disclaimer-border-color);
  border-radius: 3px;
  transition: background-color 0.2s ease;
  margin-left: auto;
  width: fit-content;
}

.product-info-disclaimer__content:hover {
  background-color: var(--disclaimer-bg-hover);
}

.product-info-disclaimer__icon {
  flex-shrink: 0;
  margin-top: 1px;
  color: var(--disclaimer-text-color);
  opacity: 0.85;
}

.product-info-disclaimer__icon svg {
  display: block;
}

.product-info-disclaimer__text {
  flex: 0 1 auto;
}

.product-info-disclaimer__text p {
  margin: 0;
  font-size: 13px;
  line-height: 1.5;
  color: var(--disclaimer-text-color);
  font-weight: 400;
  letter-spacing: 0.01em;
  text-align: right;
}

/* –ú–æ–±–∏–ª—å–Ω—ã–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞ */
@media screen and (max-width: 999px) {
  .product-info-disclaimer {
    margin: 16px 0 0 0;
  }
  
  .product-info-disclaimer__content {
    padding: 8px 12px;
    gap: 8px;
  }
  
  .product-info-disclaimer__icon svg {
    width: 14px;
    height: 14px;
  }
  
  .product-info-disclaimer__text p {
    font-size: 12px;
  }
}
</style>
{%- endif -%}