  @prompt
    GET FREE QUTE  layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-free-quote-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-free-quote-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-free-quote-heading-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-style: {{ settings.heading_font.style }};
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    text-transform: {{ settings.heading_text_transform }};
    letter-spacing: {{ settings.heading_letter_spacing }}%;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.2;
  }

  .ai-free-quote-subheading-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-style: {{ settings.text_font.style }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.4;
  }

  .ai-free-quote-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.form_layout }};
    gap: {{ block.settings.form_gap }}px;
    align-items: {{ block.settings.form_alignment }};
    justify-content: {{ block.settings.text_alignment }};
    margin-top: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-free-quote-input-group-{{ ai_gen_id }} {
    display: flex;
    flex-direction: {{ block.settings.form_layout }};
    gap: {{ block.settings.form_gap }}px;
    flex-grow: 1;
  }

  .ai-free-quote-input-{{ ai_gen_id }} {
    flex-grow: 1;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-size: {{ settings.text_font_size_desktop }}px;
    min-width: 200px;
  }

  .ai-free-quote-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
    opacity: 0.7;
  }

  .ai-free-quote-input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background_color }};
    outline-offset: 2px;
    border-color: {{ block.settings.button_background_color }};
  }

  .ai-free-quote-button-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ settings.button_border_radius }}px;
    font-family: {% if settings.button_text_font == 'heading' %}{{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }}{% else %}{{ settings.text_font.family }}, {{ settings.text_font.fallback_families }}{% endif %};
    font-weight: {% if settings.button_text_font == 'heading' %}{{ settings.heading_font.weight }}{% else %}{{ settings.text_font.weight }}{% endif %};
    font-size: {{ settings.text_font_size_desktop }}px;
    text-transform: {{ settings.button_text_transform }};
    letter-spacing: {{ settings.button_letter_spacing }}%;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
    min-width: fit-content;
  }

  .ai-free-quote-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-free-quote-features-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.features_gap }}px;
    justify-content: {{ block.settings.text_alignment }};
    margin-top: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-free-quote-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.feature_text_color }};
  }

  .ai-free-quote-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.feature_icon_size }}px;
    height: {{ block.settings.feature_icon_size }}px;
    color: {{ block.settings.feature_icon_color }};
    flex-shrink: 0;
  }

  .ai-free-quote-success-{{ ai_gen_id }} {
    color: {{ settings.success_color }};
    margin-top: 12px;
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-size: {{ settings.text_font_size_desktop }}px;
  }

  .ai-free-quote-error-{{ ai_gen_id }} {
    color: {{ settings.error_color }};
    margin-top: 12px;
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-size: {{ settings.text_font_size_desktop }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-free-quote-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 | round }}px {{ block.settings.padding_horizontal | times: 0.7 | round }}px {{ block.settings.padding_bottom | times: 0.7 | round }}px;
    }

    .ai-free-quote-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 | round }}px;
    }

    .ai-free-quote-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 | round }}px;
    }

    .ai-free-quote-form-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
    }

    .ai-free-quote-input-group-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-free-quote-input-{{ ai_gen_id }},
    .ai-free-quote-button-{{ ai_gen_id }} {
      font-size: {{ settings.text_font_size_mobile }}px;
      min-width: auto;
    }

    .ai-free-quote-features-{{ ai_gen_id }} {
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }
  }
{% endstyle %}

<div class="ai-free-quote-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-free-quote-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-free-quote-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-free-quote-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% form 'contact' %}
      <input type="hidden" name="contact[quote_request]" value="true">
      
      <div class="ai-free-quote-form-{{ ai_gen_id }}">
        <div class="ai-free-quote-input-group-{{ ai_gen_id }}">
          {% if block.settings.show_name_field %}
            <input
              type="text"
              name="contact[name]"
              class="ai-free-quote-input-{{ ai_gen_id }}"
              placeholder="{{ block.settings.name_placeholder }}"
              value="{{ form.name }}"
              required
            >
          {% endif %}

          <input
            type="email"
            name="contact[email]"
            class="ai-free-quote-input-{{ ai_gen_id }}"
            placeholder="{{ block.settings.email_placeholder }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-free-quote-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-free-quote-success-{{ ai_gen_id }}"
            {% endif %}
            required
          >

          {% if block.settings.show_phone_field %}
            <input
              type="tel"
              name="contact[phone]"
              class="ai-free-quote-input-{{ ai_gen_id }}"
              placeholder="{{ block.settings.phone_placeholder }}"
              value="{{ form.phone }}"
              autocomplete="tel"
            >
          {% endif %}
        </div>

        <button type="submit" class="ai-free-quote-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </button>
      </div>

      {% if form.errors %}
        <div id="ai-free-quote-error-{{ ai_gen_id }}" class="ai-free-quote-error-{{ ai_gen_id }}">
          {{ form.errors.messages.email }}
        </div>
      {% endif %}

      {% if form.posted_successfully? %}
        <div id="ai-free-quote-success-{{ ai_gen_id }}" class="ai-free-quote-success-{{ ai_gen_id }}">
          {{ block.settings.success_message }}
        </div>
      {% endif %}
    {% endform %}

    {% if block.settings.show_features %}
      <div class="ai-free-quote-features-{{ ai_gen_id }}">
        {% if block.settings.feature_1_text != blank %}
          <div class="ai-free-quote-feature-{{ ai_gen_id }}">
            <svg class="ai-free-quote-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20,6 9,17 4,12"></polyline>
            </svg>
            <span>{{ block.settings.feature_1_text }}</span>
          </div>
        {% endif %}

        {% if block.settings.feature_2_text != blank %}
          <div class="ai-free-quote-feature-{{ ai_gen_id }}">
            <svg class="ai-free-quote-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20,6 9,17 4,12"></polyline>
            </svg>
            <span>{{ block.settings.feature_2_text }}</span>
          </div>
        {% endif %}

        {% if block.settings.feature_3_text != blank %}
          <div class="ai-free-quote-feature-{{ ai_gen_id }}">
            <svg class="ai-free-quote-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20,6 9,17 4,12"></polyline>
            </svg>
            <span>{{ block.settings.feature_3_text }}</span>
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

