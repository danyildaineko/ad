{%- if template.name == 'product' -%}
<div class="product-info-disclaimer">
  <div class="product-info-disclaimer__content">
    <div class="product-info-disclaimer__icon">
      <svg width="16" height="16" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="1.5"/>
        <path d="M10 6V10.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        <circle cx="10" cy="13.5" r="0.75" fill="currentColor"/>
      </svg>
    </div>
    <div class="product-info-disclaimer__text">
      <p>Door images are for illustrative purposes only and may differ from the actual product.</p>
    </div>
  </div>
</div>
<style>
/*
==========================================================================
