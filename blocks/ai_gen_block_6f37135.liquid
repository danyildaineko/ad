{% doc %}
  @prompt
    Create a stylish ‘Our Projects’ page for a luxury steel & glass door brand.
    Use a clean grid of large project photos with short descriptions and city names (e.g. New York Loft, Miami Villa).
    Add a minimal intro paragraph about craftsmanship and custom installations.
    Include smooth image hover effects and a contact CTA button at the bottom inviting visitors to request a custom project quote.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-projects-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-projects-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-projects-intro-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.intro_spacing }}px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-projects-title-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-style: {{ settings.heading_font.style }};
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    text-transform: {{ settings.heading_text_transform }};
    letter-spacing: {{ settings.heading_letter_spacing }}%;
  }

  .ai-projects-description-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-style: {{ settings.text_font.style }};
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-projects-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.cta_spacing }}px;
  }

  .ai-project-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-project-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-project-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-project-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-project-card-{{ ai_gen_id }}:hover .ai-project-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_zoom_scale }});
  }

  .ai-project-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-project-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-project-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.1) 50%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }}) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-project-card-{{ ai_gen_id }}:hover .ai-project-overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-project-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    position: relative;
    z-index: 2;
  }

  .ai-project-name-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-style: {{ settings.heading_font.style }};
    color: {{ block.settings.project_title_color }};
    font-size: {{ block.settings.project_title_size }}px;
    margin: 0 0 8px;
    text-transform: {{ settings.heading_text_transform }};
    letter-spacing: {{ settings.heading_letter_spacing }}%;
  }

  .ai-project-location-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-style: {{ settings.text_font.style }};
    color: {{ block.settings.project_location_color }};
    font-size: {{ block.settings.project_location_size }}px;
    margin: 0;
    opacity: 0.8;
  }

  .ai-projects-cta-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.cta_spacing }}px;
  }

  .ai-projects-cta-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ settings.button_border_radius }}px;
    font-family: {% if settings.button_text_font == 'heading' %}{{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }}{% else %}{{ settings.text_font.family }}, {{ settings.text_font.fallback_families }}{% endif %};
    font-weight: {% if settings.button_text_font == 'heading' %}{{ settings.heading_font.weight }}{% else %}{{ settings.text_font.weight }}{% endif %};
    font-style: {% if settings.button_text_font == 'heading' %}{{ settings.heading_font.style }}{% else %}{{ settings.text_font.style }}{% endif %};
    font-size: {{ block.settings.button_font_size }}px;
    text-transform: {{ settings.button_text_transform }};
    letter-spacing: {{ settings.button_letter_spacing }}%;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background }};
  }

  .ai-projects-cta-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 1024px) {
    .ai-projects-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-projects-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-project-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-projects-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.6 }}px;
    }

    .ai-projects-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-projects-description-{{ ai_gen_id }} {
